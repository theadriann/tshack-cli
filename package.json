{
  "name": "tshack-cli",
  "version": "0.2.3",
  "description": "A lightweight and efficient CLI tool for rapidly spinning up TypeScript playgrounds",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "tshack-cli": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "prepack": "chmod +x dist/cli.js",
    "postinstall": "chmod +x ./dist/cli.js",
    "link": "npm link",
    "unlink": "npm unlink",
    "local-install": "npm run build && npm run link && chmod +x dist/cli.js",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"templates/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"templates/**/*.{ts,js}\"",
    "release": "release-it"
  },
  "keywords": [
    "typescript",
    "cli",
    "playground",
    "development",
    "prototyping",
    "vscode"
  ],
  "author": "theadriann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/theadriann/tshack-cli"
  },
  "bugs": {
    "url": "https://github.com/theadriann/tshack-cli/issues"
  },
  "homepage": "https://github.com/theadriann/tshack-cli#readme",
  "packageManager": "pnpm@8.15.9+sha512.499434c9d8fdd1a2794ebf4552b3b25c0a633abcee5bb15e7b5de90f32f47b513aca98cd5cfd001c31f0db454bc3804edccd578501e4ca293a6816166bbd9f81",
  "dependencies": {
    "chalk": "^5.4.1",
    "chokidar": "^3.6.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.4.1",
    "lodash": "^4.17.21",
    "tsx": "^4.7.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.19",
    "prettier": "^3.2.5",
    "release-it": "^18.1.2",
    "typescript": "^5.3.3"
  }
}
